{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es7",
      "es2017"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "brave-ui": ["node_modules/brave-ui/src"],
      "brave-ui/*": ["node_modules/brave-ui/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/definitions"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/definitions/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
